{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mod0",
  "version": "0.1.0",
  "identifier": "com.luke.mod0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "mod0",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maximized": true, 
        "center": true,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "windowEffects": {
          "effects": ["mica", "acrylic"],
          "state": "active"
        }
      }
    ],
    "security": {
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.icns", "icons/icon.ico"]
  }
}